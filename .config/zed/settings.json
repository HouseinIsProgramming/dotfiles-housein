// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "diagnostics": {
    "button": true,
    "include_warnings": true,
    "lsp_pull_diagnostics": {
      "enabled": true,
      "debounce_ms": 50
    },
    "inline": {
      "enabled": true,
      "update_debounce_ms": 150,
      "padding": 4,
      "min_column": 0,
      "max_severity": null
    }
  },
  "edit_predictions": {
    "mode": "eager",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null,
      "enterprise_uri": null
    },
    "enabled_in_text_threads": false
  },
  "horizontal_scroll_margin": 24,
  "inlay_hints": {
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true
  },
  "tab_size": 2,
  "show_edit_predictions": true,
  "icon_theme": {
    "mode": "dark",
    "light": "Material Icon Theme",
    "dark": "Material Icon Theme"
  },
  "features": {
    "edit_prediction_provider": "supermaven"
  },
  "centered_layout": {
    "left_padding": 0.12,
    "right_padding": 0.1
  },
  "use_smartcase_search": true,
  "agent": {
    "always_allow_tool_actions": true,
    "play_sound_when_agent_done": true,
    "default_profile": "write"
  },
  "vim": { "highlight_on_yank_duration": 400 },
  "vim_mode": true,
  "relative_line_numbers": false,
  "vertical_scroll_margin": 12,
  "base_keymap": "VSCode",
  "ui_font_size": 18,
  "tab_bar": {
    "show_nav_history_buttons": false,
    "show_tab_bar_buttons": true
  },
  "auto_indent_on_paste": true,
  "buffer_font_size": 17.0,
  "buffer_line_height": { "custom": 1.5 },
  "buffer_font_family": "CommitMono Nerd Font Propo",
  "theme": {
    "mode": "dark",
    "light": "Gleam Dark",
    "dark": "Nordfox - opaque"
  },
  "soft_wrap": "preferred_line_length",
  "preferred_line_length": 100,
  "wrap_guides": [100],
  "terminal": {
    "alternate_scroll": "off",
    "blinking": "on",
    "line_height": { "custom": 1.3 },
    "copy_on_select": true,
    "font_family": "CommitMono Nerd Font Propo",
    "font_features": null,
    "font_size": null,
    "option_as_meta": false,
    "shell": "system",
    "working_directory": "current_project_directory"
  },
  "lsp": {
    "vtsls": {
      "settings": {
        // For JavaScript:
        "javascript": {
          "tsserver": { "maxTsServerMemory": 16814 },
          "inlayHints": {
            "parameterNames": {
              "enabled": "all",
              "suppressWhenArgumentMatchesName": false
            },
            "parameterTypes": {
              "enabled": true
            },
            "variableTypes": {
              "enabled": true,
              "suppressWhenTypeMatchesName": true
            },
            "propertyDeclarationTypes": {
              "enabled": true
            },
            "functionLikeReturnTypes": {
              "enabled": true
            },
            "enumMemberValues": {
              "enabled": true
            }
          }
        },
        // For TypeScript:
        "typescript": {
          "tsserver": { "maxTsServerMemory": 16814 },
          "inlayHints": {
            "parameterNames": {
              "enabled": "all",
              "suppressWhenArgumentMatchesName": false
            },
            "parameterTypes": {
              "enabled": true
            },
            "variableTypes": {
              "enabled": true,
              "suppressWhenTypeMatchesName": true
            },
            "propertyDeclarationTypes": {
              "enabled": true
            },
            "functionLikeReturnTypes": {
              "enabled": true
            },
            "enumMemberValues": {
              "enabled": true
            }
          }
        }
      }
    },

    "typescript-language-server": {
      "initialization_options": {
        "preferences": {
          "includeInlayParameterNameHints": "all",
          "includeInlayParameterNameHintsWhenArgumentMatchesName": true,
          "includeInlayFunctionParameterTypeHints": true,
          "includeInlayVariableTypeHints": true,
          "includeInlayVariableTypeHintsWhenTypeMatchesName": true,
          "includeInlayPropertyDeclarationTypeHints": true,
          "includeInlayFunctionLikeReturnTypeHints": true,
          "includeInlayEnumMemberValueHints": true
        }
      }
    },
    "eslint": {
      "settings": {
        "problems": {
          "shortenToSingleLine": true
        }
      }
    },
    "lua-language-server": {
      "binary": {
        "path": "/opt/homebrew/bin/lua-language-server"
      },
      "settings": {}
    }
  },
  "languages": {
    "Lua": {
      "inlay_hints": {
        "enabled": true,
        "show_type_hints": true,
        "show_parameter_hints": true,
        "show_other_hints": true
      },
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "stylua",
          "arguments": [
            "--syntax=Lua54",
            "--respect-ignores",
            "--stdin-filepath",
            "{buffer_path}",
            "-"
          ]
        }
      },
      "language_servers": ["lua-language-server"]
    },
    "JavaScript": {
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      }
    },
    "TypeScript": {
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"]
        }
      }
    },
    "Python": {
      "formatter": {
        "external": {
          "command": "ruff",
          "arguments": ["format", "--stdin-filename", "{buffer_path}"]
        }
      },
      "format_on_save": {
        "external": {
          "command": "ruff",
          "arguments": ["check", "--exit-zero", "--fix", "--stdin-filename", "{buffer_path}", "-"]
        }
      }
    }
  },
  "format_on_save": "on"
}
