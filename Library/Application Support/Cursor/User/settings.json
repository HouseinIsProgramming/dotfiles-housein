{
  "window.commandCenter": true,
  "workbench.preferredLightColorTheme": "Tokyo Night Light",
  "window.autoDetectColorScheme": true,
  "git.autofetch": true,
  "editor.fontSize": 18,
  "editor.fontFamily": "\"Iosevka Nerd Font Propo\"",
  "terminal.integrated.fontSize": 17,
  "editor.lineHeight": 1.3,
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.fontLigatures": false,
  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  //   "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  //   "vim.insertModeKeyBindings": [
  //     {
  //       "before": ["j", "j"],
  //       "after": ["<Esc>"]
  //     }
  //   ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "d"],
      "after": ["\"", "_", "d", "d"]
    },
    {
      "before": ["<esc>"],
      "commands": [":nohl"]
    },
    {
      "before": ["g", "r"],
      "commands": ["editor.action.referenceSearch.trigger"]
    },
    {
      "before": ["y", "a", "g"],
      "commands": [
        "editor.action.selectAll",
        "editor.action.clipboardCopyAction"
      ]
    },
    {
      "before": ["v", "a", "g"],
      "commands": ["editor.action.selectAll"]
    },
    {
      "before": ["<leader>", "c", "f"],
      "commands": ["editor.action.formatDocument"]
    },
    {
      "before": ["<leader>", "f", "g"],
      "commands": [
        {
          "command": "periscope.search",
          "when": "editorTextFocus"
        }
      ]
    }
  ],
  "vim.leader": "<space>",
  //   "vim.handleKeys": {
  //     "<C-a>": false,
  //     "<C-f>": false
  //   },
  // To improve performance
  "extensions.experimental.affinity": {
    "vscodevim.vim": 1
  },
  "sonarlint.connectedMode.connections.sonarcloud": [
    {
      "organizationKey": "vendure-ecommerce",
      "connectionId": "vendure-ecommerce",
      "region": "EU"
    }
  ],
  "sonarlint.output.showVerboseLogs": true,
  "workbench.colorTheme": "Nord Deep",
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "catppuccin-noctis-icons.hidesExplorerArrows": false,
  "workbench.iconTheme": "catppuccin noctis icons",
  "workbench.productIconTheme": "material-product-icons",
  "cursor.composer.shouldChimeAfterChatFinishes": true,
  "cursor.composer.textSizeScale": 1.3,
  "workbench.preferredDarkColorTheme": "Nord Deep",
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.smoothScrolling": true,
  "editor.cursorSmoothCaretAnimation": "on",
  "workbench.list.smoothScrolling": true,
  "terminal.integrated.smoothScrolling": true,
  "editor.cursorBlinking": "smooth",
  "editor.formatOnSave": true,
  "spellright.addToSystemDictionary": true,
  "vim.highlightedyank.enable": true,
  "git.blame.statusBarItem.enabled": false,
  "terminal.integrated.defaultLocation": "editor",
  "accessibility.signals.terminalBell": {
    "sound": "off",
    "announcement": "off"
  },
  "editor.accessibilitySupport": "off",
  "accessibility.signals.terminalCommandFailed": {
    "sound": "off"
  },
  "accessibility.signals.terminalQuickFix": {
    "announcement": "off"
  },
  "accessibility.signals.terminalCommandSucceeded": {
    "announcement": "off"
  },
  "errorLens.enabledDiagnosticLevels": ["error", "info", "warning"],
  "codeQL.variantAnalysis.controllerRepo": "vendure-ecommerce/vendure",
  "sonarlint.pathToNodeExecutable": "/Users/housien/.nvm/versions/node/v22.16.0/bin/node",
  "sonarlint.focusOnNewCode": true,
  "json.schemaDownload.enable": true,
  "typescript.validate.enable": true,
  "typescript.tsserver.experimental.enableProjectDiagnostics": true,
  "terminal.integrated.suggest.showStatusBar": false,
  "git.enableStatusBarSync": false,
  "gitlens.statusBar.enabled": false,
  "gitlens.statusBar.pullRequests.enabled": false,
  "spellright.statusBarIndicator": false,
  "workbench.colorCustomizations": {
    "statusBar.background": "#232731",
    "statusBar.noFolderBackground": "#232731",
    "statusBar.debuggingBackground": "#232731",
    "statusBar.foreground": "#ffffff",
    "statusBar.debuggingForeground": "#ffffff"
  },
  "workbench.editor.languageDetectionHints": {
    "notebookEditors": false,
    "untitledEditors": false
  },
  "gitlens.graph.statusBar.enabled": false,
  "zenMode.hideStatusBar": false,
  "editor.experimentalGpuAcceleration": "on",
  "editor.experimental.treeSitterTelemetry": true,
  "errorLens.statusBarColorsEnabled": true,
  "debug.enableStatusBarColor": false,
  "outline.problems.enabled": false,
  "outline.problems.colors": false,
  "errorLens.enabled": true,
  "svelte.enable-ts-plugin": true,
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
  },
  "git.blame.editorDecoration.enabled": false,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "workbench.editor.centeredLayoutFixedWidth": true,
  "workbench.editor.centeredLayoutAutoResize": false,
  "editor.rulers": [
    {
      "color": "#505378",
      "column": 110
    },
    {
      "color": "#2d323e",
      "column": 80
    }
  ],
  "editor.wordWrapColumn": 100
}
