{
  "window.commandCenter": true,
  "workbench.preferredLightColorTheme": "ZED One Theme Light",
  "window.autoDetectColorScheme": true,
  "git.autofetch": true,
  "editor.fontSize": 18,
  "editor.fontFamily": "\"Iosevka Nerd Font Propo\"",
  "terminal.integrated.fontSize": 17,
  "editor.lineHeight": 1.3,
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.fontLigatures": false,
  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  //   "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  //   "vim.insertModeKeyBindings": [
  //     {
  //       "before": ["j", "j"],
  //       "after": ["<Esc>"]
  //     }
  //   ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "d"],
      "after": ["\"", "_", "d", "d"]
    },
    {
      "before": ["<esc>"],
      "commands": [":nohl"]
    },
    {
      "before": ["g", "r"],
      "commands": ["editor.action.referenceSearch.trigger"]
    },
    {
      "before": ["y", "a", "g"],
      "commands": [
        "editor.action.selectAll",
        "editor.action.clipboardCopyAction"
      ]
    },
    {
      "before": ["v", "a", "g"],
      "commands": ["editor.action.selectAll"]
    },
    {
      "before": ["<leader>", "c", "f"],
      "commands": ["editor.action.formatDocument"]
    }
  ],
  "vim.leader": "<space>",
  //   "vim.handleKeys": {
  //     "<C-a>": false,
  //     "<C-f>": false
  //   },
  // To improve performance
  "extensions.experimental.affinity": {
    "vscodevim.vim": 1
  },
  "sonarlint.focusOnNewCode": false,
  "sonarlint.connectedMode.connections.sonarcloud": [
    {
      "organizationKey": "vendure-ecommerce",
      "connectionId": "vendure-ecommerce",
      "disableNotifications": true,
      "region": "EU"
    }
  ],
  "sonarlint.output.showVerboseLogs": true,
  "workbench.colorTheme": "ZED One Theme Dark",
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "catppuccin-noctis-icons.hidesExplorerArrows": false,
  "workbench.iconTheme": "catppuccin noctis icons",
  "workbench.productIconTheme": "material-product-icons",
  "cursor.composer.shouldChimeAfterChatFinishes": true,
  "cursor.composer.textSizeScale": 1.3,
  "workbench.preferredDarkColorTheme": "Nord Deep",
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.smoothScrolling": true,
  "editor.cursorSmoothCaretAnimation": "on",
  "workbench.list.smoothScrolling": true,
  "terminal.integrated.smoothScrolling": true,
  "editor.cursorBlinking": "smooth",
  "editor.formatOnSave": true,
  "spellright.addToSystemDictionary": true,
  "vim.highlightedyank.enable": true,
  "git.blame.statusBarItem.enabled": false
}
