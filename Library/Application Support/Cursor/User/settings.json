{
    "window.commandCenter": true,
    "workbench.colorTheme": "ZED One Theme Light",
    "cursor.cpp.enablePartialAccepts": true,
    "cursor.composer.textSizeScale": 1.15,
    "editor.fontSize": 18,
    "vscode_custom_css.imports": [
        "file:///Users/house/.cursor/extensions/brandonkirbyson.vscode-animations-2.0.7/dist/updateHandler.js"
    ],
    "editor.fontFamily": "\"IosevkaTerm Nerd Font Mono\"",
    "editor.lineHeight": 1.3,
    "terminal.integrated.lineHeight": 1.2,
    "terminal.integrated.fontSize": 15,
    "editor.accessibilitySupport": "off",
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "editor.cursorSmoothCaretAnimation": "on",
    "workbench.list.smoothScrolling": true,
    "editor.smoothScrolling": true,
    "editor.cursorBlinking": "expand",
    "animations.Active": "None",
    "animations.Command-Palette": "None",
    "animations.Default-Duration": 200,
    "vim.highlightedyank.enable": true,
    "git.autofetch": true,
        "vim.easymotion": true,
        "vim.incsearch": true,
        "vim.useSystemClipboard": true,
        "vim.useCtrlKeys": true,
        "vim.hlsearch": true,
        "vim.insertModeKeyBindings": [
          {
            "before": ["j", "j"],
            "after": ["<Esc>"]
          }
        ],
        "vim.normalModeKeyBindingsNonRecursive": [
          {
            "before": ["<leader>", "d"],
            "after": ["d", "d"]
          },
          {
            "before": ["<esc>"],
            "commands": [":nohl"]
          },
        ],
        "vim.leader": "<space>",
        "vim.handleKeys": {
        },
        // To improve performance
        "extensions.experimental.affinity": {
          "vscodevim.vim": 1
        },
        "[jsonc]": {
            "editor.defaultFormatter": "esbenp.prettier-vscode"
        }
      
}